{% extends 'back/base.html.twig' %}

{% block title %}Price{% endblock %}

{% block body %}
    <h1>Price</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ price.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ price.name }}</td>
            </tr>
            <tr>
                <th>Start_date</th>
                <td>{{ price.startDate ? price.startDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>End_date</th>
                <td>{{ price.endDate ? price.endDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ price.price }}</td>
            </tr>
            <tr>
                <th>Property</th>
                <td>{{ price.property }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_price_index') }}">back to list</a>

    <a href="{{ path('app_price_edit', {'id': price.id}) }}">edit</a>

    {{ include('back/price/_delete_form.html.twig') }}
{% endblock %}
