{% extends 'back/base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
{#    {{ include('back/user/_form.html.twig', {'button_label': 'Update'}) }}#}
    <div class="row">
        <div class="col-12 col-lg-9">
            <div class="card">
                <div class="card-body">
                    <div class="user-profile mb-4">

                        <div class="ul-widget-card__user-info border-bottom-gray-200 pb-3">
                            <img class="profile-picture avatar-xl mb-2" src="{{ asset('uploads/' ~ user.avatarUrl) }}" alt="user profile picture">
                            <p class="m-0 text-24">{{ user.firstName }} {{ user.lastName }}</p>
                            <p class="text-muted m-0"><a href="href">{{user.email}}</a></p>
                            <div class="mt-3 ul-widget-app__skill-margin">
                                <span class="text-15">{{ user.nationality }}</span>
                                <span class="text-15">
                                    {% for role in user.roles %}
                                        {{ include('back/user/_badge.html.twig') }}
                                    {% endfor %}
                                </span></div>
                        </div>
                        <div class="ul-widget-app__profile-footer mt-4">
                            <div class="ul-widget-app__profile-footer-font"><a href="{{ path('app_edit_profile',{'username':user.username}) }}"><i class="i-Speach-Bubble-6 text-16 font-weight-600 mr-1"></i><span class="text-16 font-weight-600">Edit</span></a></div>
                            <div class="ul-widget-app__profile-footer-font"><a href="href"><i class="i-File-Clipboard-File--Text text-16 font-weight-600 mr-1"></i><span class="text-16 font-weight-600">Description</span></a></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

